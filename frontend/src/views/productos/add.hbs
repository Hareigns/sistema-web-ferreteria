<link rel="stylesheet" href="/styles/productos.css">

<section class="vh-100 gradient-custom">
  <div class="card">
     <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registro Producto</h3>
            <form>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="codigo_producto" class="form-control form-control-lg" />
                    <label class="form-label" for="codigo_producto">Código Producto</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <select class="form-control form-control-lg" id="codigo_proveedor">
                    <option value="" disabled selected>Seleccione un proveedor</option>
                    <option value="1">Proveedor A</option>
                    <option value="2">Proveedor B</option>
                    <option value="3">Proveedor C</option>
                  </select>
                  <label class="form-label" for="codigo_proveedor">Código Proveedor</label>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="nombre" class="form-control form-control-lg" />
                    <label class="form-label" for="nombre">Nombre</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="number" id="precio_compra" class="form-control form-control-lg" step="0.01" />
                    <label class="form-label" for="precio_compra">Precio Compra</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <input type="number" id="cantidad" class="form-control form-control-lg" />
                    <label class="form-label" for="cantidad">Cantidad</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4 pb-2">
                  <select class="form-control form-control-lg" id="sector">
                    <option value="" disabled selected>Seleccione un sector</option>
                    <option value="1">Sector 1</option>
                    <option value="2">Sector 2</option>
                    <option value="3">Sector 3</option>
                  </select>
                  <label class="form-label" for="sector">Sector</label>
                </div>
              </div>

              <div class="row">
                <div class="col-12 mb-4">
                  <div class="form-outline">
                    <input type="text" id="marca" class="form-control form-control-lg" />
                    <label class="form-label" for="marca">Marca</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="date" id="fecha_entrada" class="form-control form-control-lg" disabled value="2024-03-15" />
                    <label class="form-label" for="fecha_entrada">Fecha Entrada</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="date" id="fecha_vencimiento" class="form-control form-control-lg" />
                    <label class="form-label" for="fecha_vencimiento">Fecha Vencimiento</label>
                  </div>
                </div>
              </div>

              <div class="mt-4 pt-2 d-flex justify-content-between">
                <button class="btn btn-primary btn-lg" type="submit">Ingresar</button>
                <button class="btn btn-warning btn-lg" type="button">Modificar Precio o Cantidad</button>
                <button class="btn btn-danger btn-lg" type="button">Eliminar</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>

