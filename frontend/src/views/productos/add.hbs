            <thead class="bg-light">
              <tr>
                <th>C√≥digo</th>
                <th>Nombre</th>
                <th>Sector</th>
                <th>Marca</th>
                <th>Ubicaci√≥n</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Vencimiento</th>
              </tr>
