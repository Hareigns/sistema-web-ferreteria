<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center mb-0"><i class="fas fa-user-edit me-2"></i>Registro de Empleados</h3>
        </div>
        <div class="card-body p-4">
          <form id="empleadoForm">
            <div class="row g-3">
              <div class="col-md-6">
                <div class="floating-label">
                  <label for="nombre">Nombre</label>
                  <input type="text" id="nombre" class="form-control" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑüÜ\s]{3,}"
                    title="Solo letras (mínimo 3 caracteres)" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="floating-label">
                  <label for="apellido">Apellido</label>
                  <input type="text" id="apellido" class="form-control" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑüÜ\s]{3,}"
                    title="Solo letras (mínimo 3 caracteres)" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="floating-label">
                  <label for="direccion">Dirección</label>
                  <input type="text" id="direccion" class="form-control" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="floating-label">
                  <label for="cedula">Cédula (13 dígitos + 1 letra)</label>
                  <input type="text" id="cedula" class="form-control" pattern="[0-9]{13}[A-Za-z]{1}"
                    title="13 dígitos seguidos de 1 letra" required>
                </div>
              </div>
              <div id="estado-container" class="col-md-6">
                <div class="floating-label modern-select">
                  <label for="estado">Estado</label>
                  <select id="estado" class="form-select" required>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                  </select>
                </div>
              </div>
              <div class="col-md-6">
                <div class="floating-label">
                  <label for="telefono">Teléfono</label>
                  <input type="tel" id="telefono" class="form-control" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="floating-label modern-select">
                  <label for="compania_telefonica">Compañía Telefónica</label>
                  <select id="compania_telefonica" class="form-select" required>
                    <option value="Tigo">Tigo</option>
                    <option value="Claro">Claro</option>
                  </select>
                </div>
              </div>
              <div class="col-md-6 d-flex align-items-center">
                <div class="form-check form-switch ps-0">
                  <input class="form-check-input ms-0" type="checkbox" id="contrasena_temporal">
                  <label class="form-check-label ms-3" for="contrasena_temporal">
                    Resetear a contraseña temporal
                  </label>
                </div>
              </div>
            </div>

            <div class="action-buttons">
              <button class="btn btn-primary" type="button" id="ingresarButton" onclick="ingresarEmpleado()">
                <i class="fas fa-user-plus me-2"></i>Ingresar
              </button>
              <button class="btn btn-danger" type="button" onclick="limpiarCampos()">
                <i class="fas fa-broom me-2"></i>Limpiar
              </button>
            </div>

            <div class="mt-5">
              <h5 class="section-title"><i class="fas fa-user-cog me-2"></i>Modificar Empleados</h5>
              <div class="modern-select mb-3">
                <select name="codigo_empleado" class="form-select" id="codigo_empleado" required
                  onchange="habilitarDeshabilitarBotones()">
                  <option value="" disabled selected>Seleccione un empleado</option>
                </select>
              </div>
              <button class="btn btn-success w-100" type="button" id="modificarButton" onclick="modificarEmpleado()"
                disabled>
                <i class="fas fa-user-edit me-2"></i>Modificar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

