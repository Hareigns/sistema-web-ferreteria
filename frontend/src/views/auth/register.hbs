<link rel="stylesheet" href="/styles/register.css">

<div class="container">
  <div class="col-md-4 mx-auto">
    <div class="card text-center">
      <div class="card-header">
        <h3>Register</h3>
      </div>
      <div class="card-body">
        <img src="/images/logo1.webp" alt="logo ferreteria" class="card-img-top mx-auto m-2 rounded-circle w-350">
        <form action="/register" method="post">
          <div class="form-group">
            <input type="text" name="fullname" placeholder="Full Name" class="form-control" autofocus
              style="margin-bottom: 20px">
          </div>
          <div class="form-group">
            <input type="text" name="username" placeholder="Username" class="form-control" style="margin-bottom: 20px">
          </div>
          <div class="form-group">
            <input type="password" name="password" placeholder="Password" class="form-control"
              style="margin-bottom: 20px">
          </div>
          <div class="form-group">
            <button class="btn btn-success btn-block">Registrarse</button>
          </div>
        </form>
      </div>
      <div class="card-footer text-muted">

      </div>
    </div>
  </div>
</div>