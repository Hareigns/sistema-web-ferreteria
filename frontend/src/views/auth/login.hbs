<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registro</h3>
            <form>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="codigo" class="form-control form-control-lg" />
                    <label class="form-label" for="codigo">Código</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="nombre" class="form-control form-control-lg" />
                    <label class="form-label" for="nombre">Nombre</label>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" id="apellido" class="form-control form-control-lg" />
                    <label class="form-label" for="apellido">Apellido</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">
                  <div class="form-outline">
                    <input type="tel" id="telefono" class="form-control form-control-lg" />
                    <label class="form-label" for="telefono">Teléfono</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-12 mb-4">
                  <select class="form-control form-control-lg" id="compania">
                    <option value="" disabled selected>Seleccione una compañía</option>
                    <option value="1">Compañía A</option>
                    <option value="2">Compañía B</option>
                    <option value="3">Compañía C</option>
                  </select>
                  <label class="form-label" for="compania">Compañía</label>
                </div>
              </div>

              <div class="row">
                <div class="col-12 mb-4">
                  <select class="form-control form-control-lg" id="sector">
                    <option value="" disabled selected>Seleccione un sector</option>
                    <option value="1">Sector 1</option>
                    <option value="2">Sector 2</option>
                    <option value="3">Sector 3</option>
                  </select>
                  <label class="form-label" for="sector">Sector</label>
                </div>
              </div>

              <div class="mt-4 pt-2 d-flex justify-content-between">
                <button class="btn btn-primary btn-lg" type="submit">Ingresar</button>
                <button class="btn btn-danger btn-lg" type="button">Eliminar</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
