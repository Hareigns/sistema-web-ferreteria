<!-- Sección de productos destacados -->
<section class="featured-section" id="productos">
  <div class="container">
    <h2 class="text-center section-title">Productos Destacados</h2>

    {{#hasProducts productosPorSector}}
    {{#each productosPorSector}}
    <div class="mb-5">
      <h3 class="sector-title mb-4">{{@key}}</h3>
      <div class="row">
        {{#each this}}
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card product-card h-100 border-0 shadow-sm">
            <div class="card-body text-center p-4">
              <div class="product-icon bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-3"
                style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                <i class="fas {{this.Icono}}" style="font-size: 1.8rem;"></i>
              </div>
              <h5 class="card-title product-title">{{this.Nombre_Producto}}</h5>
              <p class="card-text text-muted small">Vendidos: {{this.CantidadVendida}} unidades</p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <span class="product-price fw-bold">{{this.PrecioPromedio}}</span>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/each}}
    {{else}}
    <div class="alert alert-info">No hay productos destacados disponibles.</div>
    {{/hasProducts}}
  </div>
</section>

